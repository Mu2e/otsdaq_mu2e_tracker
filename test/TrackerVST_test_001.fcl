# -*- mode:tcl -*- 
#------------------------------------------------------------------------------
# usage: artdaqDriver -c srcs/otsdaq_mu2e_tracekr_test/test_TrackerVST_001.fcl
# test_buffer
#------------------------------------------------------------------------------
#include "Offline/fcl/standardServices.fcl"

process_name: TrackerVSTTest001

events_to_generate : 100
run_number         : 401

source: {
    module_type: "ArtdaqInput"
}

services: { @table::Services.Reco 
    ArtdaqFragmentNamingServiceInterface: {
	helper_plugin   : "Mu2e"
	service_provider: "ArtdaqFragmentNamingService"
    }
    ArtdaqSharedMemoryServiceInterface: {
        resume_after_timeout: false
        service_provider    : "ArtdaqSharedMemoryService"
        waiting_time        : 1
    }

    DbService: {
        dbName: "mu2e_conditions_prd"
        purpose: "EMPTY"
        verbose: 0
        version: ""
    }
}

#------------------------------------------------------------------------------
# this is the FCL structure passed to the fragmentgenerator (TrackerVST)
#------------------------------------------------------------------------------
fragment_receiver: {
    generator              : TrackerVST     # daq generator plug-in type (defines the shared lib to load)
		fragment_type          : Mu2e	 #generator data fragment type
    board_id               : 0
    loadSimFile            : false
    simFileName            : "none"
    fragment_type          : Mu2e           # generator data fragment type

    rawOutputEnable        : false
    rawOutputFile          : "/tmp/TrackerVST.bin"
    sendEmpties            : false

		dtcId                  : -1             # P.Murat: the most painful way of dealing with FCL I know
		activeLinks            : [ 0 ]          # P.Murat: add active ROC links
		heartbeatInterval      : 2000
    heartbeatsAfter        : 16

    readoutMode            : 0
    max_fragment_size_bytes: 0x100000

    saveDTCRegisters             : 0          ## 1
    generated_fragments_per_event: 1          ## 2
    fragment_ids                 : [ 0]       ## [ 0 , 11 ]      

    nEventsDbg             :  10            # don't need to dump more
    debugLevel             : 1

    cfo_config             : {
				use_dtc_cfo_emulator   : true
				debug_packet_count     : 0
				debug_type             : "DTC_DebugType_SpecialSequence"
				sticky_debug_type      : true
				quiet                  : true
				asyncRR                : true
				force_no_debug_mode    : true
				useCFODRP              : false
    }

    requestsAhead          :  1             # read digis - what it should be ?
    request_delay          : 20000

    destinations: {}

    routing_table_config: {
        use_routing_manager: false
    }
}

event_builder: {
    use_art                             : true
    expected_fragments_per_event        : 1
    print_event_store_stats             : false
    verbose                             : false
    events_expected_in_SimpleQueueReader: @local::events_to_generate
    init_fragment_count                 : 0
    buffer_count                        : 1
    max_fragment_size_bytes             : 0x100000
}

physics: {
    analyzers:   {
        a1:    {
            module_type: OfflineFragmentsDumper
        }
    }

    # t1: [a1]
    t1 : [ ]
    e1 : [ rootout ]
}

outputs: {
    rootout:  { module_type: RootOutput
        fileName         : "raw.mu2e.trkvst.annex.%06r_%08s.art"
        fileProperties   : { maxSize : 500000 granularity: SubRun }
        checkFileName	   : false
        compressionLevel : 0
    }
    out1:  {
        module_type: FileDumperOutput
        wantProductFriendlyClassName: true
    }
}

